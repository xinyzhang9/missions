<div class = 'container'>

	<h4>Edit Mission</h4>
	<form action="/missions/<%=@mission.id%>" method = "post">
		<input type="hidden" name = "authenticity_token" value = "<%=form_authenticity_token%>">
		<input type="hidden" name = "_method" value = "patch">
		<div class="form-group">
			<label for="title">Mission title</label>
			<input type="text" class="form-control" name = "title" id = "title" value = "<%=@mission.title%>">
			
		</div>
		<div class="form-group">
			<label for="interval">Mission alert interval</label>
			<input type="text" class="form-control" name = "interval_h" id = "interval_h" placeholder = "hour" value = "<%=@mission.interval/60.round()%>">
			<br>
			<input type="text" class="form-control" name = "interval_m" id = "interval_m" placeholder = "min" value = "<%=@mission.interval % 60%>">
			
		</div>
		<div class="form-group">
			<label for="times">How many times to alert</label>
			<input type="text" class="form-control" name = "times" id = "title" value = "<%=@mission.times%>">
			
		</div>
		<div class="form-group">
			<label for="title">When shall we start</label><br>
			Date:<input type="date" class="form-control" name = "when_start_date" id = "when_start_date" value = "<%=@mission.when_start_date%>">
			Time:<input type="time" class="form-control" name = "when_start_time" id = "when_start_time" value = "<%=@mission.when_start_time%>">
			
		</div>
		<div class="form-group">
			<label for="title">How long will it last (days)</label>
			<input type="text" class="form-control" name = "lasting" id = "lasting" value = "<%=@mission.lasting%>">
		</div>
		<div class="form-group">
			<label for="nightmode">Night Mode</label>
			<input type="radio" name = "night_mode" value = "on">ON
			<input type="radio" name = "night_mode" value = "off">OFF			
		</div>

		<input type="submit" value = "Update" class = "btn btn-success">
	</form>
</div>